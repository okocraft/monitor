{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'config:recommended',
    'docker:pinDigests',
    'helpers:pinGitHubActionDigests',
    ':configMigration',
    ':pinDevDependencies',
  ],
  packageRules: [
    {
      groupName: 'all non-major dependencies for gh-actions',
      groupSlug: 'gha-all-minor-patch',
      matchManagers: [
        'github-actions',
      ],
      matchUpdateTypes: [
        'minor',
        'patch',
      ],
      matchPackageNames: [
        '*',
      ],
    },
    {
      groupName: 'all non-major dependencies for go',
      groupSlug: 'go-all-minor-patch',
      matchManagers: [
        'gomod',
      ],
      matchUpdateTypes: [
        'minor',
        'patch',
      ],
      matchPackageNames: [
        '*',
      ],
    },
    {
      groupName: 'all non-major dependencies for npm',
      groupSlug: 'npm-all-minor-patch',
      matchManagers: [
        'npm',
      ],
      matchUpdateTypes: [
        'minor',
        'patch',
      ],
      matchPackageNames: [
        '*',
      ],
    },
  ],
}
