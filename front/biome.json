{
    "$schema": "https://biomejs.dev/schemas/2.1.3/schema.json",
    "vcs": {
        "enabled": true,
        "clientKind": "git",
        "useIgnoreFile": true
    },
    "files": {
        "ignoreUnknown": false,
        "includes": ["**", "!**/routeTree.gen.ts"]
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "indentWidth": 4
    },
    "assist": {
        "actions": {
            "source": {
                "organizeImports": "on"
            }
        }
    },
    "linter": {
        "enabled": true,
        "includes": ["**", "!src/api"]
    },
    "javascript": {
        "formatter": {
            "quoteStyle": "double"
        }
    }
}
